{
  "name": "dragons-n-dungeons",
  "version": "0.0.1",
  "description": "",
  "main": "index.jsx",
  "scripts": {
    "start": "webpack-dev-server --mode development",
    "test": "jest -c",
    "test-ci": "npm i && jest && codecov",
    "format": "prettier --write \"src/**/*.js\"",
    "build": "rm -rf dist && webpack -p"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/chinanwu/dragons-n-dungeons"
  },
  "author": "Chin-An Wu",
  "license": "ISC",
  "dependencies": {
    "react": "^16.12.0",
    "react-dom": "^16.9.0",
    "react-redux": "^7.1.1",
    "redux": "^4.0.4",
    "redux-actions": "^2.6.5",
    "redux-thunk": "^2.3.0"
  },
  "devDependencies": {
    "@babel/core": "^7.6.2",
    "@babel/preset-env": "^7.6.2",
    "@babel/preset-react": "^7.0.0",
    "babel-loader": "^8.0.6",
    "codecov": "^3.6.1",
    "css-loader": "^3.2.0",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.15.1",
    "eslint": "^6.6.0",
    "eslint-plugin-react": "^7.16.0",
    "eslint-plugin-react-hooks": "^2.3.0",
    "file-loader": "^4.2.0",
    "focus-trap-react": "^6.0.0",
    "html-webpack-plugin": "^5.5.0",
    "jest": "^24.9.0",
    "jest-enzyme": "^7.1.1",
    "less": "^3.10.3",
    "less-loader": "^5.0.0",
    "prettier": "1.18.2",
    "prop-types": "^15.7.2",
    "style-loader": "^1.0.0",
    "webpack": "^4.41.0",
    "webpack-cli": "^3.3.9",
    "webpack-dev-server": "^3.8.1"
  },
  "jest": {
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.jsx?$",
    "setupFilesAfterEnv": [
      "<rootDir>/src/jest-setup/enzymeSetUp.js"
    ],
    "automock": true,
    "clearMocks": true,
    "collectCoverage": true,
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/src/jest-setup/fileMock.js",
      "\\.(css|less)$": "<rootDir>/src/jest-setup/styleMock.js"
    },
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/jest-setup/"
    ],
    "unmockedModulePathPatterns": [
      "enzyme",
      "jest-enzyme",
      "prop-types",
      "react",
      "react-dom",
      "redux-actions"
    ]
  }
}
